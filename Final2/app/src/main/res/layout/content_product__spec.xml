<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/content_product__spec"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sinwan.final2.Product_Spec"
    tools:showIn="@layout/activity_product__spec"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView  android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools">

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal" />

            <Button
                android:id="@+id/book"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/cart2" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:text="SPECIFICTIONS:"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:background="@color/colorPrimary"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_height="wrap_content"
                        android:text="Name:"

                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tName"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                </TableRow>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#c0c0c0" />
                <TableRow
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Category:"

                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tCategory"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
                </TableRow>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#c0c0c0" />
                <TableRow
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tags:"

                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tTags"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
                </TableRow>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#c0c0c0" />
                <TableRow
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price:"

                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tPrice"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
                </TableRow>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#c0c0c0" />
                <TableRow
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Colour:"

                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tColour"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
                </TableRow>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#c0c0c0" />
                <TableRow
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other Specs:"

                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tOther"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
                </TableRow>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#c0c0c0" />
                <TableRow
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rating:"
                        android:textColor="@android:color/holo_green_dark"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tRating"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="16sp" />
                </TableRow>
            </TableLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#c0c0c0" />
            <TextView
                android:id="@+id/TShop"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:text="Select From Shop:"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/TShop" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#c0c0c0" />
            <TextView
                android:id="@+id/TRating"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignEnd="@+id/TShop"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/TShop"
                android:layout_below="@+id/spinner"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:text="Rate Now!!"
                android:textColor="@android:color/holo_red_dark" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/TRating"
                android:layout_alignStart="@+id/TRating"
                android:layout_below="@+id/TRating"
                android:layout_marginTop="8dp"
                android:numStars="5"
                android:rating="2.5"
                android:stepSize="0.5" />


        </LinearLayout>

    </ScrollView>


</RelativeLayout>
