<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sinwan.final2.RegisterActivity"
    tools:showIn="@layout/app_bar_register"
    android:background="@color/cardview_shadow_end_color">
    <EditText
        android:layout_width="200dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/e0"
        android:layout_marginTop="36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Name:"

        android:textColor="?android:attr/textColorPrimary"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/e3"
        android:hint="address"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_below="@+id/e1"
        android:layout_alignLeft="@+id/e1"
        android:layout_alignStart="@+id/e1"
        android:layout_marginTop="34dp" />

    <Button
        android:text="register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/e2"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/black"
        android:layout_below="@+id/e4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/e1"
        android:hint="Password"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/e0"
        android:layout_alignLeft="@+id/e0"
        android:layout_alignStart="@+id/e0" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="27dp"
        android:id="@+id/e4"
        android:hint="Phone"
        android:inputType="number"
        android:maxLength="10"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_below="@+id/e3"
        android:layout_alignLeft="@+id/e3"
        android:layout_alignStart="@+id/e3" />
</RelativeLayout>
