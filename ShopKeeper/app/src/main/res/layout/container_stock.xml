<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="fish name"
        android:id="@+id/textFishName"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/icon"
        android:layout_toEndOf="@+id/icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="sd"
        android:id="@+id/textType"

        android:textColor="#666"
        android:layout_below="@+id/textSize"
        android:layout_alignLeft="@+id/textSize"
        android:layout_alignStart="@+id/textSize" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textSize"
        android:textColor="#666"
        android:layout_below="@+id/textFishName"
        android:layout_alignLeft="@+id/textFishName"
        android:layout_alignStart="@+id/textFishName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="price"
        android:id="@+id/textPrice"
        android:textColor="@color/colorAccent"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp"
        android:layout_alignBaseline="@+id/tick"
        android:layout_alignBottom="@+id/tick"
        android:layout_toLeftOf="@+id/tick"
        android:layout_toStartOf="@+id/tick" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tick"
        android:checked="true"
        android:background="@drawable/selector_check"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp"
        android:layout_alignBaseline="@+id/textSize"
        android:layout_alignBottom="@+id/textSize"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>